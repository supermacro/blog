---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead';
import Footer from '../components/Footer';
import FormattedDate from '../components/FormattedDate';
import Header from '../components/Header';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();
const pageUrl = Astro.url.toString();
const rssUrl = new URL('rss.xml', Astro.site).toString();
const sitemapUrl = new URL('sitemap-index.xml', Astro.site).toString();
const generator = Astro.generator;
const currentPath = Astro.url.pathname;
---

<html lang="en">
	<head>
		<BaseHead
			title={title}
			description={description}
			canonicalUrl={canonicalUrl}
			pageUrl={pageUrl}
			rssUrl={rssUrl}
			sitemapUrl={sitemapUrl}
			generator={generator}
			image={heroImage}
		/>
	</head>

	<body>
		<Header currentPath={currentPath} />
		<main class="mx-auto w-full max-w-content px-4 py-16">
			<article class="flex flex-col gap-10">
				{heroImage && (
					<Image
						class="h-auto w-full rounded-3xl shadow-soft"
						width={1020}
						height={510}
						src={heroImage}
						alt={`Hero image for ${title}`}
					/>
				)}
				<header class="flex flex-col items-center gap-4 text-center">
					<div class="text-sm font-medium uppercase tracking-wide text-mist">
						<FormattedDate date={pubDate} />
						{updatedDate && (
							<span class="ml-2 italic text-mist">
								â€¢ Last updated on <FormattedDate date={updatedDate} />
							</span>
						)}
					</div>
					<h1 class="text-4xl font-bold text-ink sm:text-5xl">{title}</h1>
					<p class="max-w-2xl text-lg text-fog">{description}</p>
					<hr class="w-24 border-t-2 border-accent/40" />
				</header>
				<div class="space-y-6 text-lg leading-relaxed text-fog">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>

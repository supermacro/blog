---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead';
import Footer from '../components/Footer';
import FormattedDate from '../components/FormattedDate';
import Header from '../components/Header';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();
const pageUrl = Astro.url.toString();
const rssUrl = new URL('rss.xml', Astro.site).toString();
const sitemapUrl = new URL('sitemap-index.xml', Astro.site).toString();
const generator = Astro.generator;
const currentPath = Astro.url.pathname;
---

<html lang="en">
	<head>
		<BaseHead
			title={title}
			description={description}
			canonicalUrl={canonicalUrl}
			pageUrl={pageUrl}
			rssUrl={rssUrl}
			sitemapUrl={sitemapUrl}
			generator={generator}
			image={heroImage}
		/>
	</head>

	<body>
		<Header currentPath={currentPath} />
		<main class="mx-auto w-full max-w-content px-4 py-16">
			<article class="flex flex-col gap-12">
				<header class="space-y-6">
					<nav class="text-xs uppercase tracking-[0.3em] text-mist/60">
						<a href="/blog" class="text-mist/70 transition-colors hover:text-accent">&larr; Archive</a>
					</nav>
					<div class="space-y-3">
						<h1 class="text-4xl font-semibold text-ink sm:text-[3.25rem]">{title}</h1>
						<p class="text-base text-mist">{description}</p>
					</div>
					<div class="flex flex-wrap items-center gap-3 text-xs uppercase tracking-[0.3em] text-mist/70">
						<FormattedDate date={pubDate} />
						{updatedDate && (
							<span class="text-mist/50">
								Â· Updated <FormattedDate date={updatedDate} />
							</span>
						)}
					</div>
					{heroImage && (
						<img
							class="mt-6 w-full rounded-xl border border-cloud/70"
							src={heroImage.src}
							alt={`Illustration for ${title}`}
						/>
					)}
				</header>
				<div class="space-y-6 font-mono text-[1.02rem] leading-[1.9] text-fog">
					<slot />
				</div>
			</main>
		<Footer />
	</body>
</html>

---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead';
import Footer from '../components/Footer';
import Header from '../components/Header';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();
const pageUrl = Astro.url.toString();
const rssUrl = new URL('rss.xml', Astro.site).toString();
const sitemapUrl = new URL('sitemap-index.xml', Astro.site).toString();
const generator = Astro.generator;
const currentPath = Astro.url.pathname;

// Format date like "January 8, 2022"
const formatDate = (date: Date) => {
	return date.toLocaleDateString('en-US', {
		year: 'numeric',
		month: 'long',
		day: 'numeric',
	});
};
---

<html lang="en" class="h-full">
	<head>
		<BaseHead
			title={title}
			description={description}
			canonicalUrl={canonicalUrl}
			pageUrl={pageUrl}
			rssUrl={rssUrl}
			sitemapUrl={sitemapUrl}
			generator={generator}
			image={heroImage}
		/>
	</head>

	<body class="m-0 font-serif bg-white text-body text-base leading-normal min-h-full flex flex-col max-sm:text-[17px]">
		<Header currentPath={currentPath} />
		<main class="flex-1 w-full max-w-page mx-auto px-[15%] max-[1000px]:px-[10%] max-[630px]:px-[5%] max-[600px]:px-[2%]">
			<article class="article-container">
				<h2 id="title" class="text-center font-serif text-3xl mt-16 scroll-mt-20">{title}</h2>
				<div class="article-date text-center font-sans mb-3">
					{formatDate(pubDate)}
					{updatedDate && (
						<span class="text-muted ml-2">
							(Updated: {formatDate(updatedDate)})
						</span>
					)}
				</div>

				{heroImage && (
					<img
						class="my-6 w-full rounded"
						src={heroImage.src}
						alt={`Illustration for ${title}`}
					/>
				)}

				<div class="article-content prose mx-auto max-w-content leading-relaxed">
					<slot />

					<p class="text-center text-black/60 mt-12 mb-12">
						<em>Liked this post? Consider <a href="https://ko-fi.com/gdelgado" target="_blank">buying me a coffee</a> :)</em>
					</p>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>

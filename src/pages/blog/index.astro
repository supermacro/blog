---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead';
import Footer from '../../components/Footer';
import FormattedDate from '../../components/FormattedDate';
import Header from '../../components/Header';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();
const pageUrl = Astro.url.toString();
const rssUrl = new URL('rss.xml', Astro.site).toString();
const sitemapUrl = new URL('sitemap-index.xml', Astro.site).toString();
const generator = Astro.generator;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead
			title={`Blog | ${SITE_TITLE}`}
			description={SITE_DESCRIPTION}
			canonicalUrl={canonicalUrl}
			pageUrl={pageUrl}
			rssUrl={rssUrl}
			sitemapUrl={sitemapUrl}
			generator={generator}
		/>
	</head>
	<body>
		<Header currentPath={currentPath} />
		<main class="mx-auto w-full max-w-content px-4 py-16">
			<section class="flex flex-col gap-10">
				<header class="text-center">
					<h1 class="text-4xl font-bold text-ink sm:text-5xl">Latest Posts</h1>
					<p class="mt-4 text-lg text-fog">
						Dive into news, tutorials, and tips from the Astro community.
					</p>
				</header>
				<ul class="grid list-none gap-8 p-0 sm:grid-cols-2">
					{posts.map((post, index) => (
						<li
							class={`group ${index === 0 ? 'sm:col-span-2' : ''}`}
							key={post.id}
						>
							<a
								href={`/blog/${post.id}/`}
								class="flex h-full flex-col overflow-hidden rounded-3xl bg-white/80 shadow-soft transition-shadow hover:shadow-lg"
							>
								{post.data.heroImage && (
									<Image
										class="h-52 w-full object-cover sm:h-64"
										width={720}
										height={360}
										src={post.data.heroImage}
										alt={post.data.title}
									/>
								)}
								<div class="flex flex-1 flex-col gap-3 p-6">
									<p class="text-sm font-medium uppercase tracking-wide text-mist">
										<FormattedDate date={post.data.pubDate} />
									</p>
									<h4 class={`text-2xl font-semibold text-ink transition-colors group-hover:text-accent ${index === 0 ? 'sm:text-3xl' : ''}`}>
										{post.data.title}
									</h4>
									<p class="text-base text-fog">
										{post.data.description}
									</p>
								</div>
							</a>
						</li>
					))}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>

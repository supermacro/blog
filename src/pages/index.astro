---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead';
import Footer from '../components/Footer';
import FormattedDate from '../components/FormattedDate';
import Header from '../components/Header';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();
const pageUrl = Astro.url.toString();
const rssUrl = new URL('rss.xml', Astro.site).toString();
const sitemapUrl = new URL('sitemap-index.xml', Astro.site).toString();
const generator = Astro.generator;
const currentPath = Astro.url.pathname;

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 6);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead
			title={SITE_TITLE}
			description={SITE_DESCRIPTION}
			canonicalUrl={canonicalUrl}
			pageUrl={pageUrl}
			rssUrl={rssUrl}
			sitemapUrl={sitemapUrl}
			generator={generator}
		/>
	</head>
	<body>
		<Header currentPath={currentPath} />
		<main class="mx-auto flex w-full max-w-content flex-col gap-16 px-4 py-16">
			<section class="space-y-6">
				<header class="flex items-center justify-between">
					<h2 class="text-xs uppercase tracking-[0.3em] text-mist/70">Latest entries</h2>
					<a href="/blog" class="text-xs font-medium uppercase tracking-[0.3em] text-accent transition-colors hover:text-accent-dark">
						View archive
					</a>
				</header>
				<ul class="divide-y divide-cloud/70 border border-cloud/70 bg-white/60">
					{posts.map((post) => (
						<li class="px-4 py-5" key={post.id}>
							<a href={`/blog/${post.id}/`} class="flex flex-col gap-1 text-inherit no-underline">
								<span class="text-xs uppercase tracking-[0.3em] text-mist/60">
									<FormattedDate date={post.data.pubDate} />
								</span>
								<span class="text-lg font-medium text-ink transition-colors hover:text-accent">
									{post.data.title}
								</span>
								<span class="text-sm text-mist">
									{post.data.description}
								</span>
							</a>
						</li>
					))}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>

---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead';
import Footer from '../components/Footer';
import FormattedDate from '../components/FormattedDate';
import Header from '../components/Header';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();
const pageUrl = Astro.url.toString();
const rssUrl = new URL('rss.xml', Astro.site).toString();
const sitemapUrl = new URL('sitemap-index.xml', Astro.site).toString();
const generator = Astro.generator;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead
			title={`Blog | ${SITE_TITLE}`}
			description={SITE_DESCRIPTION}
			canonicalUrl={canonicalUrl}
			pageUrl={pageUrl}
			rssUrl={rssUrl}
			sitemapUrl={sitemapUrl}
			generator={generator}
		/>
	</head>
	<body>
		<Header currentPath={currentPath} />
		<main class="mx-auto w-full max-w-content px-4 py-16">
			<section class="space-y-12">
				<header class="space-y-4">
					<h1 class="text-4xl font-semibold text-ink sm:text-[3rem]">Archive</h1>
				</header>
				<ul class="divide-y divide-cloud/70 border border-cloud/70 bg-white/60">
					{posts.map((post) => (
						<li class="group px-4 py-5 transition-colors hover:bg-cloud/40" key={post.id}>
							<a href={`/blog/${post.id}/`} class="flex flex-col gap-2 text-inherit no-underline">
								<div class="flex items-center gap-3 text-xs uppercase tracking-[0.3em] text-mist/60">
									<FormattedDate date={post.data.pubDate} />
								</div>
								<h2 class="text-2xl font-semibold text-ink transition-colors group-hover:text-accent">
									{post.data.title}
								</h2>
								<p class="text-sm text-mist">
									{post.data.description}
								</p>
							</a>
						</li>
					))}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
